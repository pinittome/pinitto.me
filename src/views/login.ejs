<div class="page-header-banner">
    <div class="container">
        <div class="row">
            <div class="span12">
                <h1>Get access to board</h1>
            </div>
        </div>
    </div>
</div>

<div class="container">

    <% if (typeof(errors) != 'undefined') { %>
    <script type="text/javascript">
    var errors = <%- errors %>
    </script>
    <% } %>
    <div class="row">
        <div class="span7">
            <h2>This board requires authorisation</h2>
            <form class="form-horizontal" method="post">
                <fieldset>
                    <legend>Login</legend>
                    <div class="control-group">
                        <label class="control-label" for="owner">Board ID</label>
                        <div class="controls">
                            <%=boardId %><input type="hidden" name="board" value="<%=boardId %>" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="password">Password</label>
                        <div class="controls">
                            <input type="password" name="password" placeholder="" />
                        </div>
                    </div>
                </fieldset> 
         
                <div class="control-group" >  
                    <div class="form-actions">
                        <input type="hidden" name="referrer" value="<%=referrer %>" />
                        <button type="submit" class="btn btn-primary">Get me some access...</button>
                        <button type="button" class="btn leave">Cancel</button>
                    </div>
                </div>                    
            </form>
        </div>
        <div class="span5">
            <h2>Help</h2>
            <p>Enter a password here to get access to the board.</p>
            <p>If you believe you should be able to access this board without a password then 
            <a href="/<%=boardId%>" title="Attempt board access without a password">click here</a> to 
            attempt board access without a password.</p>        
       </div>
    </div>

</div> <!-- /container -->
