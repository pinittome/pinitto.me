<div class="modal hide fade" id="board-access-modal">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Update board access</h3>
    </div>
    <div class="modal-body">
        <form onsubmit="return false">
            <fieldset>
                <div class="control-group">
                    <label class="control-label">Adminstration</label>
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on">
                                <label class="checkbox">
                                    <input type="checkbox" class="" checked="checked" name="password-admin-require" />
                                </label>
                            </span>
                            <input class="span2" placeholder="password" type="password" onmouseover="this.title=this.value" name="password-admin-value" />
                         </div>
                         <p class="help-block">Check box to require password</p>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
    <div class="modal-footer">
        <a href="#" id="close-board-access-modal" class="btn">Close</a>
        <a href="#" class="btn btn-primary update-board-access">Update access</a>
    </div> 
</div>