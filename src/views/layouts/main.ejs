    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>Welcome to <%=name %> - <%=pageName %></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width">
        <link href='//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,700,800,600,300' rel='stylesheet' type='text/css'/>
        
        <script type="text/javascript">
        var config = <%- JSON.stringify(app) %>
        var errors = {}
        </script>
        <% if (!app.useOptimised) { %>
        <link rel="stylesheet" href="/css/main.css">
        <script data-main="/js/main.js" src="/js/require.js"></script>
        <% } else { %>
        <script src="/main.<%= app.version %>.js"></script>
        <link rel="stylesheet" href="/app.<%= app.version %>.css">
        <% } %>
        <link href="/js/vendor/jquery-twitter-display/tweet/jquery.tweet.css" media="all" rel="stylesheet" type="text/css"/>
        </script>
    </head>
    <body>
        
